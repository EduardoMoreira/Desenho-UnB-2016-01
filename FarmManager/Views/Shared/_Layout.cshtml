<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Farm Manager</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Farm Manager", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Sobre", "About", "Home")</li>
                    <li>@Html.ActionLink("Gado", "Index", "Vaca")</li>
                    <li>@Html.ActionLink("Equipamento Rural", "Index", "EquipamentoRural")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" role="button" aria-expanded="false" href="#" data-toggle="dropdown">Terras<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Pasto", "Index", "Pasto")</li>
                            <li>@Html.ActionLink("Piquete", "Index", "Piquete")</li>
                            <li>@Html.ActionLink("Terra Plantio", "Index", "TerraPlantio")</li>
                            <li>@Html.ActionLink("Terra Nua", "Index", "TerraNua")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Relatório Inventário", "Index", "RelatorioInventario")</li>
                    <li>@Html.ActionLink("Funcionário", "Index", "Funcionario")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" role="button" aria-expanded="false" href="#" data-toggle="dropdown">Planos de Ciclo<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Plano de Ciclo Semanal", "PlanoCicloSemanal", "Vaca")</li>
                            <li>@Html.ActionLink("Plano de Ciclo Mensal", "PlanoCicloMensal", "Vaca")</li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Farm Manager</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
