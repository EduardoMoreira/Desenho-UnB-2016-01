@model FarmManager.Models.TerraPlantio

@{
    ViewBag.Title = "Create";
}

<h2>Cadastrar uma nova terra de plantio</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Terra de Plantio</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.DTPlantio, "Data de plantio", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DTPlantio)
                @Html.ValidationMessageFor(model => model.DTPlantio)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DTColheita, "Data de colheita", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DTColheita)
                @Html.ValidationMessageFor(model => model.DTColheita)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TPGrao, "Tipo de grão", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TPGrao)
                @Html.ValidationMessageFor(model => model.TPGrao)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NRHectares, "Número de hectares", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NRHectares)
                @Html.ValidationMessageFor(model => model.NRHectares)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar a lista de terras de plantio", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
