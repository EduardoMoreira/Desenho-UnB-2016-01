@model FarmManager.Models.TerraPlantio

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Terra de Plantio</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.CDTerra)

        <div class="form-group">
            @Html.LabelFor(model => model.DTPlantio, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DTPlantio)
                @Html.ValidationMessageFor(model => model.DTPlantio)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DTColheita, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DTColheita)
                @Html.ValidationMessageFor(model => model.DTColheita)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TPGrao, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TPGrao)
                @Html.ValidationMessageFor(model => model.TPGrao)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NRHectares, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NRHectares)
                @Html.ValidationMessageFor(model => model.NRHectares)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar a lista de terras de plantio", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
