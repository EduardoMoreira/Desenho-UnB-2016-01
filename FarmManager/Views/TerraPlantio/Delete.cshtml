@model FarmManager.Models.TerraPlantio

@{
    ViewBag.Title = "Delete";
}

<h2>Deletar</h2>

<h3>Tem certeza que deseja remover esta terra de plantio?</h3>
<div>
    <h4>Terra de Plantio</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Data de plantio
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DTPlantio)
        </dd>

        <dt>
            Data de colheita
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DTColheita)
        </dd>

        <dt>
            Tipo de grão
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TPGrao)
        </dd>

        <dt>
            Número de hectares
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NRHectares)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar a lista de terras de plantio", "Index")
        </div>
    }
</div>
