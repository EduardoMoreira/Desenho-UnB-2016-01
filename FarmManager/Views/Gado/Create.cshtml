@model FarmManager.Models.Gado

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar um novo gado</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.NRBrinco, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NRBrinco)
                @Html.ValidationMessageFor(model => model.NRBrinco)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DTNascimento, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DTNascimento, "{0:MM/dd/yyyy}")
                @Html.ValidationMessageFor(model => model.DTNascimento)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TPSexo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TPSexo, new SelectList(
                  new List<Object>{
                       new { value = "Feminino" , text = "Fêmea" },
                       new { value = "Masculino" , text = "Macho"}
                                  }
                                    ,"value", "text", 2))
                @Html.ValidationMessageFor(model => model.TPSexo)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar a lista de vacas", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
