@model FarmManager.Models.Pasto

@{
    ViewBag.Title = "Delete";
}

<h2>Deletar</h2>

<h3>Tem certeza que deseja remover este pasto?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Gados presentes
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NRGadosAlocadas)
        </dd>

        <dt>
            Capacidade máxima
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NRMaximoGados)
        </dd>

        <dt>
            Número de hectares
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NRHectares)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar a lista de pastos", "Index")
        </div>
    }
</div>
