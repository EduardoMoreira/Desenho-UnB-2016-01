@model FarmManager.Models.Piquete

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar um novo piquete</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Piquete</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.NRGadosAlocadas, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NRGadosAlocadas)
                @Html.ValidationMessageFor(model => model.NRGadosAlocadas)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NRMaximoGados, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NRMaximoGados)
                @Html.ValidationMessageFor(model => model.NRMaximoGados)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NRHectares, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NRHectares)
                @Html.ValidationMessageFor(model => model.NRHectares)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar a lista de piquetes", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
