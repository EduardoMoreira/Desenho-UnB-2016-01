@model FarmManager.Models.Piquete

@{
    ViewBag.Title = "Delete";
}

<h2>Excluir</h2>

<h3>Tem certeza que deseja excluir esse piquete?</h3>
<div>
    <h4>Piquete</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Vacas presentes
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NRVacasAlocadas)
        </dd>

        <dt>
            Capacidade máxima
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NRMaximoVacas)
        </dd>

        <dt>
            Número de hectares
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NRHectares)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Voltar a lista de piquetes", "Index")
        </div>
    }
</div>
