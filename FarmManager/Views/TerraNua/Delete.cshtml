@model FarmManager.Models.TerraNua

@{
    ViewBag.Title = "Delete";
}

<h2>Deletar</h2>

<h3>Tem certeza que deseja remover esta terra nua?</h3>
<div>
    <h4>Terra Nua</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Descrição da terra
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DETerra)
        </dd>

        <dt>
            Número de hectares
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NRHectares)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar a lista de terras nuas", "Index")
        </div>
    }
</div>
