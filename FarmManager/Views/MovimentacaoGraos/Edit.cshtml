@model FarmManager.Models.MovimentacaoGrao

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Movimentao Grao</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.CDMovimentacaoGrao)

        <div class="form-group">
            @Html.LabelFor(model => model.TPGrao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TPGrao, new SelectList(
                  new List<Object>{
                       new { value = "Milho" , text = "Milho" },
                       new { value = "Soja" , text = "Soja"}
                                  }
                                    , "value", "text", 2))
                @Html.ValidationMessageFor(model => model.TPGrao)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TPEntradaSaida, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TPEntradaSaida, new SelectList(
                  new List<Object>{
                       new { value = "Entrada" , text = "Entrada" },
                       new { value = "Saída" , text = "Saída"}
                                  }
                                    , "value", "text", 2))
                @Html.ValidationMessageFor(model => model.TPEntradaSaida)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DEMovimentacaoGrao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DEMovimentacaoGrao)
                @Html.ValidationMessageFor(model => model.DEMovimentacaoGrao)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NRQuantidade, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NRQuantidade)
                @Html.ValidationMessageFor(model => model.NRQuantidade)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar para a lista", "Index")
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}