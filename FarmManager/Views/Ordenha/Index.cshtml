@model IEnumerable<FarmManager.Models.Ordenha>

@{
    ViewBag.Title = "Lista";
}

<h2>Lista</h2>

<p>
    @Html.ActionLink("Cadastrar nova ordenha", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VLLeite)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DTOrdenha)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VLLeite)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DTOrdenha)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CDOrdenha }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.CDOrdenha }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.CDOrdenha })
        </td>
    </tr>
}

</table>
