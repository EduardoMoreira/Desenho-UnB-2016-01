@model IEnumerable<FarmManager.Models.Funcionario>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de funcionários</h2>

<p>
    @Html.ActionLink("Cadastrar um novo funcionário", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NOFuncionario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VLSalario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DTContratacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DTNascimento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NOFuncionario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VLSalario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DTContratacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DTNascimento)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CDFuncionario }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.CDFuncionario }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.CDFuncionario })
        </td>
    </tr>
}

</table>
