@model FarmManager.Models.Funcionario

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Funcionário</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.CDFuncionario)

        <div class="form-group">
            @Html.LabelFor(model => model.NOFuncionario, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NOFuncionario)
                @Html.ValidationMessageFor(model => model.NOFuncionario)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VLSalario, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VLSalario)
                @Html.ValidationMessageFor(model => model.VLSalario)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DTContratacao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DTContratacao)
                @Html.ValidationMessageFor(model => model.DTContratacao)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DTNascimento, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DTNascimento)
                @Html.ValidationMessageFor(model => model.DTNascimento)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar a lista de funcionários", "Index")
</div>
