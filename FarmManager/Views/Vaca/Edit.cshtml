@model FarmManager.Models.Vaca

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Vaca</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.NRBrinco)

        <div class="form-group">
            @Html.LabelFor(model => model.DTNascimento, "Data Nascimento", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DTNascimento)
                @Html.ValidationMessageFor(model => model.DTNascimento)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TPSexo, "Sexo", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TPSexo)
                @Html.ValidationMessageFor(model => model.TPSexo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DTInseminacao, "Data Última Inseminação", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DTInseminacao)
                @Html.ValidationMessageFor(model => model.DTInseminacao)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DTDesamamentacao, "Data Desamamentação", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DTDesamamentacao)
                @Html.ValidationMessageFor(model => model.DTDesamamentacao)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DTProcriacao, "Data Última Procriação", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DTProcriacao)
                @Html.ValidationMessageFor(model => model.DTProcriacao)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar a lista de vacas", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
